<div class="row">
  <form action="/sign_up" method="post">
    <div class="form-group">
      <div class="col-sm-10">
        <input class="form-control" placeholder="username" type="text" name="user[name]">
        <input class="form-control" placeholder="password" type="password" name="user[password]">
      </div>
    </div>
    <div class="form group">
      <div class="col-sm-2">
        <button class="btn btn-default" type="submit">sign up!</button>
      </div>
    </div>
  </form>
</div>


<div class="row">
  <form action="/sign_in" method="post">
    <div class="form-group">
      <div class="col-sm-10">
        <input class="form-control" placeholder="username" type="text" name="user[name]">
        <input class="form-control" placeholder="password" type="password" name="user[password]">
      </div>
    </div>
    <div class="form group">
      <div class="col-sm-2">
        <button class="btn btn-default" type="submit">sign in!</button>
      </div>
    </div>
  </form>
</div>

<% if flash[:password_error] %>
  <div class="alert alert-danger" role="alert">
  <%= flash[:password_error] %>
  </div>
<% end %>

<% if flash[:no_user] %>
  <div class="alert alert-danger" role="alert">
  <%= flash[:no_user] %>
  </div>
<% end %>


