<div class="row">
  <h2 class="text-center"><%= @list.name %></h2
</div>

<div class="row">
  <div class="col-sm-2 col-sm-offset-5">
    <a class="btn btn-primary btn-block" href="/">Back To Lists</a>
  </div>
</div>

<br>

<form method="post">
  <div class="form-group">
    <input class="form-control" type="hidden" name="task[list_id]" value="<%= @list.id %>">
    <div class="col-sm-10">
      <input class="form-control" placeholder="write a new task here..." type="text" name="task[name]">
    </div>
  </div>
  <div class="form group">
    <div class="col-sm-2">
      <button class="btn btn-default" type="submit">Add</button>
    </div>
  </div>
</form>

<div class="col-sm-10">
  <table class="table">
    <% @tasks.each do |task| %>
    <tr>
      <td><strong><%= task.name %></strong></td>
      <td>
        <form action="/user/<%= @current_user.id%>/list/<%=@list.id %>/task/<%= task.id %>" method="post">
          <input type="hidden" name="_method" value="put">
          <input type="hidden" name="list_id" value="<%= @list.id %>">
          <% if task.done == false %>
          <button type="submit" class="btn btn-default">
            <span class="glyphicon glyphicon-ok"></span>
          </button>
          <% else %>
          <button type="submit" class="btn btn-success">
            <span class="glyphicon glyphicon-ok"></span>
            TASK COMPLETE!
          </button>
          <% end %>
        </form>
      </td>
      <td>
        <form action="/user/<%= @current_user.id%>/list/<%=@list.id %>/task/<%= task.id %>" method="post">
          <input type="hidden" name="_method" value="delete">
          <input type="hidden" name="list_id" value="<%= @list.id %>">
          <button class="btn btn-danger" type="submit">
          <span class="glyphicon glyphicon-trash"></span>
          </button>
        </form>
      </td>
    </tr>
    <% end %>
  </table>
</div>






